


<div class="container">
    <div class="d-flex justify-content-center flex-row">

        <div class="col-lg-6 col-md-8 col-sm-8">
            <div class="card p-1">

              <div class="card-header bg-white">
                Edit your Account, <%= resource.username %>
              </div>
                <div class="card-body">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>

                    <div class="form-group">
                      <%= f.label :email %><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
                    </div>

                    <div class="form-group">
                      <%= f.label :bio %><br />
                      <%= f.text_field :bio, class: 'form-control'%>
                    </div>
                    <div class="form-group">
                      <%= f.label :website %><br />
                      <%= f.text_field :website, class: 'form-control'%>
                    </div>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                    <% end %>

                    <div class="form-group">
                      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                      
                    </div>

                    <div class="form-group">
                      <%= f.label :password_confirmation %><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
                    </div>

                    <div class="form-group">
                      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                      <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
                    </div>

                    <div class="actions">
                      <%= f.submit "Update", class: 'btn btn-outline-primary' %>
                    </div>
                  <% end %>

                  <hr>

                  <h3>Cancel my account</h3>

                  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name),class: 'btn btn-outline-danger btn-sm', data: { confirm: "Are you sure?" }, method: :delete %></p>

                  <%= link_to "Back", :back, class: 'btn btn-outline-secondary btn-sm'%>

                </div>
            </div>
        </div>
    </div>

</div>