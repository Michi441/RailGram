<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<% @post.images.each do |image|%>

  <%= image_tag (image), class: 'img-card-top', style: "width: 200px; height: 100%;"%>

<% end %>

<%= link_to 'Edit', edit_user_post_path(@post) %> |
<%= link_to 'Back', user_path(@post.user) %>
